@model Cognify.Models.CriminalViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Cognify - Datos del Delincuente</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
    <div class="container mx-auto p-8">
        <h2 class="text-2xl font-bold mb-6">Ingrese sus Datos</h2>
        @using (Html.BeginForm("Form", "Criminal", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="space-y-4">
                <div>
                    @Html.LabelFor(m => m.Name, new { @class = "block text-sm font-medium text-gray-700" })
                    @Html.TextBoxFor(m => m.Name, new { @class = "mt-1 block w-full border border-gray-300 rounded-md p-2" })
                    @Html.ValidationMessageFor(m => m.Name)
                </div>
                <div>
                    @Html.LabelFor(m => m.Age, new { @class = "block text-sm font-medium text-gray-700" })
                    @Html.TextBoxFor(m => m.Age, new { type = "number", min = "1", @class = "mt-1 block w-full border border-gray-300 rounded-md p-2" })
                    @Html.ValidationMessageFor(m => m.Age)
                </div>
                <div>
                    @Html.LabelFor(m => m.CrimeType, new { @class = "block text-sm font-medium text-gray-700" })
                    @Html.DropDownListFor(m => m.CrimeType, new SelectList(new[] {
                        new { Value = "violent", Text = "Delito Violento" },
                        new { Value = "financial", Text = "Crimen Financiero" },
                        new { Value = "hate", Text = "Crimen de Odio" }
                    }, "Value", "Text"), "Seleccione un tipo de crimen", new { @class = "mt-1 block w-full border border-gray-300 rounded-md p-2" })
                    @Html.ValidationMessageFor(m => m.CrimeType)
                </div>
                <div class="text-right">
                    <button type="submit" class="py-2 px-4 bg-blue-500 text-white rounded hover:bg-blue-600">
                        Continuar
                    </button>
                </div>
            </div>
        }
    </div>
</body>
</html>
